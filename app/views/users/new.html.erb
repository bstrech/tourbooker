<%= form_for(@user, :html=>{:class=>"form form-signin"}) do |f| %>
    <% if @user.errors.any? %>
        <div id="error_explanation">
          <h4><%= t("views.user_create_error", :count=>@user.errors.count) %></h4>

          <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <h2 class="form-signin-heading"><%=t("views.new_user.get_started")%></h2>
    <div class="field">
      <%= f.text_field :email, :class=>"form-control required email", :placeholder=>User.human_attribute_name(:email) %>
    </div>
    <div class="actions">
      <%= f.submit(:class=>"btn btn-lg btn-primary btn-block") %>
    </div>
<% end %>
