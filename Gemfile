  gem 'coffee-rails', '~> 3.2.1'
  gem 'yui-compressor', '~> 0.12.0'
end

gem 'jquery-rails'

group :test, :development do
  gem 'jasmine-rails'
  gem "factory_girl_rails", "~> 4.3.0"
  gem "rspec-rails", "~> 2.14.1"

end
